<div class="login">
  <div class="login__wrapper">
    <div class="login__left">
      <h2 class="login__header">Login</h2>
      <form action="/users/login" method="POST" class="login__form">
        <label for="email" class="login__label">Email address</label>
        <input type="email" id="email" name="email" class="login__input">
        <label for="password" class="login__label">Password</label>
        <input type="password" id="password" name="password" class="login__input">
        <input type="submit" class="login__submit" value="Login">
      </form>
    </div>
    <div class="login__right">
      <img src="/images/login-ideaz.jpeg" alt="creative image" class="login__image">
    </div>
  </div>
</div>