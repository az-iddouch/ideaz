<div class="navbar">
  <div class="logo-container">
    <p class="logo">Ideaz</p>
  </div>
  <nav class="navigation">
    <ul class="navigation-list">
      <li class="navigation-list__item">
        <div class="hover-effect"></div>
        <a href="/" class="navigation-list__link">
          <svg class="navigation-list__icon feather ">
            <use xlink:href="/icons/feather-sprite.svg#home" />
          </svg>
          Home
        </a>
      </li>
      <li class="navigation-list__item">
        <div class="hover-effect"></div>
        <a href="/about" class="navigation-list__link">
          <svg class="navigation-list__icon feather ">
            <use xlink:href="/icons/feather-sprite.svg#briefcase" />
          </svg>
          About
        </a>
      </li>
      <li class="navigation-list__item">
        <div class="hover-effect"></div>
        <a href="/ideas" class="navigation-list__link">
          <svg class="navigation-list__icon feather ">
            <use xlink:href="/icons/feather-sprite.svg#layers" />
          </svg>
          Ideas
        </a>
      </li>
      <li class="navigation-list__item">
        <div class="hover-effect"></div>
        <a href="/ideas/add" class="navigation-list__link">
          <svg class="navigation-list__icon feather ">
            <use xlink:href="/icons/feather-sprite.svg#plus-circle" />
          </svg>
          Add Idea
        </a>
      </li>
    </ul>
  </nav>

  <div class="categories">
    {{#if user}}
    <ul class="categories__list">
      {{#each categories}}
      <li class="categories__list-item">
        <div class="categories__list-item-circle" style="background-color:{{color}};"></div><a href="/categories/{{_id}}"
          class="categories__list-item-link">{{text}}</a>
        <a href="#" data-id="{{_id}}" class="categories__list-item-remove">X</a>
      </li>
      {{/each}}
    </ul>
    <form action="/categories/add" method="POST" class="categories__add-form">
      <input type="text" placeholder="Categorie" name="text" class="categories__add-input">
    </form>
    <a href="#" class="categories__add">
      <span class="categories__add-plus">+</span> Add new
    </a>
    {{/if}}
  </div>

  <footer class="footer">
    <div class="footer__social">
      <a href="https://github.com/az-iddouch" class="footer__link footer__link--github" target="_blank">
        <svg class="footer__icon feather">
          <use xlink:href="/icons/feather-sprite.svg#github" />
        </svg>
      </a>
      <a href="https://twitter.com/Az_iddouch" target="_blank" class="footer__link footer__link--twitter">
        <svg class="footer__icon feather">
          <use xlink:href="/icons/feather-sprite.svg#twitter" />
        </svg>
      </a>
      <a href="https://www.linkedin.com/in/abdelaziz-iddouch-757ab2162/" class="footer__link footer__link--linkedin"
        target="_blank">
        <svg class="footer__icon feather">
          <use xlink:href="/icons/feather-sprite.svg#linkedin" />
        </svg>
      </a>
    </div>
    <p class="footer__legal">2019 All rights reserved</p>
  </footer>
</div>